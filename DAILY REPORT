                <fieldset>
                    <legend>Edit Pekerjaan Harian</legend>
                    <div id="edit-daily-work-container">
                        <!-- Item pekerjaan yang bisa diedit akan ditambahkan di sini -->
                    </div>
                </fieldset>
                <div class="modal-footer">
                    <button type="button" id="cancel-edit-btn" class="btn">Batal</button>
                    <button type="submit" class="btn btn-edit">Simpan Perubahan</button>
                </div>
            </form>
        </div>
    </div>


    <script>
        // JavaScript digabungkan di sini
        document.addEventListener('DOMContentLoaded', () => {
            // === ELEMEN DOM ===
            const pages = document.querySelectorAll('.page');
            const navLinks = document.querySelectorAll('.nav-link');
            const reportForm = document.getElementById('report-form');
            const teamTabs = document.querySelectorAll('.team-tab');
            const selectedTeamInput = document.getElementById('selected-team');
            const plumberFields = document.getElementById('plumber-fields');
            const plumberJobLuar = document.getElementById('plumber-job-luar');
            const reportDateInput = document.getElementById('report-date');
            const dailyWorkContainer = document.getElementById('daily-work-container');
            const addWorkBtn = document.getElementById('add-work-btn');
            
            const historyTableBody = document.getElementById('history-table-body');
            const filterDate = document.getElementById('filter-date');
            const filterTeam = document.getElementById('filter-team');
            const filterKeyword = document.getElementById('filter-keyword');
            const downloadExcelBtn = document.getElementById('download-excel-btn');
            
            const picaChartCanvas = document.getElementById('pica-chart').getContext('2d');
            let picaChart;

            const leadTimeChartCanvas = document.getElementById('lead-time-chart').getContext('2d');
            let leadTimeChart;

            const dashboardTeamGrid = document.getElementById('dashboard-team-grid');
            const dashboardDateDisplay = document.getElementById('dashboard-date-display');

            // === ELEMEN MODAL INPUT ===
            const inputModal = document.getElementById('input-modal');
            const openInputModalBtn = document.getElementById('open-input-modal-btn');
            const closeInputModalBtn = document.getElementById('close-input-modal-btn');
            
            // === ELEMEN MODAL EDIT ===
            const editModal = document.getElementById('edit-modal');
            const closeEditModalBtn = document.getElementById('close-edit-modal-btn');
            const cancelEditBtn = document.getElementById('cancel-edit-btn');
            const editReportForm = document.getElementById('edit-report-form');
            const editReportIdInput = document.getElementById('edit-report-id');
            const editModalTitle = document.getElementById('edit-modal-title');
            const editPicaMasuk = document.getElementById('edit-pica-masuk');
            const editPicaClose = document.getElementById('edit-pica-close');
            const editPicaPending = document.getElementById('edit-pica-pending');
            const editPlumberFields = document.getElementById('edit-plumber-fields');
            const editDailyWorkContainer = document.getElementById('edit-daily-work-container');

            // === MANAJEMEN STATE ===
            let reports = JSON.parse(localStorage.getItem('dailyReports')) || [];
            let workItemCounter = 0;

            // === INISIALISASI ===
            const initializeApp = () => {
                const today = new Date();
                const yyyy = today.getFullYear();
                const mm = String(today.getMonth() + 1).padStart(2, '0');
                const dd = String(today.getDate()).padStart(2, '0');
                reportDateInput.value = `${yyyy}-${mm}-${dd}`;
                
                addWorkItem(); 

                renderHistory();
                updateDashboard();
                showPage('dashboard-page');
            };

            // === NAVIGASI ===
            const showPage = (pageId) => {
                pages.forEach(page => {
                    page.classList.toggle('active', page.id === pageId);
                });
                navLinks.forEach(link => {
                    link.classList.toggle('active', link.dataset.page === pageId);
                });
                if (pageId === 'dashboard-page') updateDashboard();
                if (pageId === 'history-page') renderHistory();
            };

            navLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    showPage(e.target.dataset.page);
                });
            });

            // === PENANGANAN FORM & MODAL INPUT ===
            openInputModalBtn.addEventListener('click', () => inputModal.classList.add('active'));
            closeInputModalBtn.addEventListener('click', () => inputModal.classList.remove('active'));


            teamTabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    const team = tab.dataset.team;
                    teamTabs.forEach(t => t.classList.remove('active'));
                    tab.classList.add('active');
                    selectedTeamInput.value = team;

                    reportForm.className = 'report-form';
                    reportForm.classList.add(`${team.toLowerCase()}-bg`);

                    const isPlumber = team === 'Plumber';
                    plumberFields.style.display = isPlumber ? 'block' : 'none';
                    plumberJobLuar.style.display = isPlumber ? 'block' : 'none';
                });
            });

            const addWorkItem = () => {
                workItemCounter++;
                const workItemDiv = document.createElement('div');
                workItemDiv.classList.add('daily-work-item');
                workItemDiv.id = `work-item-${workItemCounter}`;
                workItemDiv.innerHTML = `
                    <input type="text" placeholder="Deskripsi pekerjaan..." class="work-description" required>
                    <select class="work-status">
                        <option value="PROGRESS">PROGRESS</option>
                        <option value="CLOSE">CLOSE</option>
                    </select>
                    <button type="button" class="remove-work-btn" data-item-id="work-item-${workItemCounter}">X</button>
                `;
                dailyWorkContainer.appendChild(workItemDiv);
            };

            dailyWorkContainer.addEventListener('click', (e) => {
                if(e.target.classList.contains('remove-work-btn')) {
                    if (dailyWorkContainer.children.length > 1) {
                         const itemId = e.target.dataset.itemId;
                         document.getElementById(itemId).remove();
                    } else {
                        alert('Setidaknya harus ada satu deskripsi pekerjaan.');
                    }
                }
            });
            
            addWorkBtn.addEventListener('click', addWorkItem);

            reportForm.addEventListener('submit', (e) => {
                e.preventDefault();

                const dailyWork = [];
                document.querySelectorAll('#daily-work-container .daily-work-item').forEach(item => {
                    const description = item.querySelector('.work-description').value.trim();
                    const status = item.querySelector('.work-status').value;
                    if (description) {
                        dailyWork.push({ description, status });
                    }
                });

                if (dailyWork.length === 0 && selectedTeamInput.value !== 'Plumber') {
                    alert('Harap isi setidaknya satu deskripsi pekerjaan.');
                    return;
                }

                if (selectedTeamInput.value === 'Plumber') {
                    dailyWork.push({ description: 'pengecekan pompa area seam F', status: 'CONTINUE' });
                    dailyWork.push({ description: 'pengecekan pompa area setpond 5', status: 'CONTINUE' });
                }

                const newReport = {
                    id: Date.now(),
                    date: reportDateInput.value,
                    team: selectedTeamInput.value,
                    pica: {
                        masuk: parseInt(document.getElementById('pica-masuk').value) || 0,
                        close: parseInt(document.getElementById('pica-close').value) || 0,
                        pending: parseInt(document.getElementById('pica-pending').value) || 0,
                    },
                    dailyWork,
                    details: selectedTeamInput.value === 'Plumber' ? {
                        ph: document.getElementById('plumber-ph').value,
                        tds: document.getElementById('plumber-tds').value,
                        embung: document.getElementById('plumber-embung').value,
                        frp01: document.getElementById('plumber-frp01').value,
                        frp02: document.getElementById('plumber-frp02').value,
                    } : null
                };

                reports.push(newReport);
                saveReports();
                alert('Laporan berhasil disimpan!');
                reportForm.reset();
                
                const today = new Date();
                const yyyy = today.getFullYear();
                const mm = String(today.getMonth() + 1).padStart(2, '0');
                const dd = String(today.getDate()).padStart(2, '0');
                reportDateInput.value = `${yyyy}-${mm}-${dd}`;
                
                dailyWorkContainer.innerHTML = '';
                addWorkItem();
                inputModal.classList.remove('active');
                showPage('history-page');
            });

            // === HALAMAN RIWAYAT & FUNGSI EXCEL ===
            const getFilteredReports = () => {
                const dateFilterVal = filterDate.value;
                const teamFilterVal = filterTeam.value;
                const keywordFilterVal = filterKeyword.value.toLowerCase();

                return reports
                    .filter(r => !dateFilterVal || r.date === dateFilterVal)
                    .filter(r => !teamFilterVal || r.team === teamFilterVal)
                    .filter(r => !keywordFilterVal || r.dailyWork.some(w => w.description.toLowerCase().includes(keywordFilterVal)))
                    .sort((a, b) => new Date(b.date) - new Date(a.date));
            };

            const renderHistory = () => {
                historyTableBody.innerHTML = '';
                const filteredReports = getFilteredReports();

                if (filteredReports.length === 0) {
                    historyTableBody.innerHTML = `<tr><td colspan="6" style="text-align: center;">Tidak ada data laporan.</td></tr>`;
                    return;
                }

                filteredReports.forEach(report => {
                    const workHtml = report.dailyWork.map(w => 
                        `<div>${w.description} <span class="status-${w.status.toLowerCase()}">${w.status}</span></div>`
                    ).join('');
                    
                    let detailsHtml = '-';
                    if (report.team === 'Plumber' && report.details) {
                        detailsHtml = `
                            PH: <strong>${report.details.ph || '-'}</strong>, TDS: <strong>${report.details.tds || '-'}</strong> <br>
                            Embung: <strong>${report.details.embung || '-'}</strong> <br>
                            FRP01: <strong>${report.details.frp01 || '-'}</strong>, FRP02: <strong>${report.details.frp02 || '-'}</strong>
                        `;
                    }
                    
                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                        <td>${report.date}</td>
                        <td>${report.team}</td>
                        <td>${workHtml}</td>
                        <td>Masuk: ${report.pica.masuk}<br>Close: ${report.pica.close}<br>Pending: ${report.pica.pending}</td>
                        <td>${detailsHtml}</td>
                        <td class="actions-cell">
                            <button class="btn btn-edit" data-id="${report.id}">Edit</button>
                            <button class="btn btn-delete" data-id="${report.id}">Hapus</button>
                        </td>
                    `;
                    historyTableBody.appendChild(tr);
                });
            };
            
            [filterDate, filterTeam, filterKeyword].forEach(el => el.addEventListener('input', renderHistory));

            historyTableBody.addEventListener('click', (e) => {
                const target = e.target;
                if (target.classList.contains('btn-delete')) {
                    const reportId = parseInt(target.dataset.id);
                    if (confirm('Apakah Anda yakin ingin menghapus laporan ini?')) {
                        reports = reports.filter(r => r.id !== reportId);
                        saveReports();
                        renderHistory();
                    }
                } else if (target.classList.contains('btn-edit')) {
                    const reportId = parseInt(target.dataset.id);
                    openEditModal(reportId);
                }
            });

            const exportToExcel = () => {
                const filteredReports = getFilteredReports();
                if (filteredReports.length === 0) {
                    alert('Tidak ada data untuk diunduh.');
                    return;
                }

                const dataForExcel = filteredReports.map(report => {
                    const workItems = report.dailyWork.map(w => `${w.description} [${w.status}]`).join('\n');
                    let plumberDetails = '';
                    if (report.team === 'Plumber' && report.details) {
                        plumberDetails = `PH: ${report.details.ph || ''}, TDS: ${report.details.tds || ''}, Embung: ${report.details.embung || ''}%, FRP01: ${report.details.frp01 || ''}%, FRP02: ${report.details.frp02 || ''}%`;
                    }
                    return {
                        'Tanggal': report.date,
                        'Tim': report.team,
                        'Pekerjaan Harian': workItems,
                        'PICA Masuk': report.pica.masuk,
                        'PICA Close': report.pica.close,
                        'PICA Pending': report.pica.pending,
                        'Detail Tim': plumberDetails
                    };
                });

                const worksheet = XLSX.utils.json_to_sheet(dataForExcel);
                const workbook = XLSX.utils.book_new();
                XLSX.utils.book_append_sheet(workbook, worksheet, "Riwayat Laporan");

                // Auto-fit column width
                const objectMaxLength = [];
                dataForExcel.forEach(obj => {
                    Object.keys(obj).forEach((key, i) => {
                        const len = obj[key]?.toString().length || 0;
                        objectMaxLength[i] = Math.max(objectMaxLength[i] || 0, len);
                    });
                });
                worksheet["!cols"] = objectMaxLength.map(len => ({ wch: len + 2 }));

                XLSX.writeFile(workbook, "Riwayat_Laporan_Harian.xlsx");
            };

            downloadExcelBtn.addEventListener('click', exportToExcel);


            // === FUNGSI MODAL EDIT ===
            const openEditModal = (reportId) => {
                const report = reports.find(r => r.id === reportId);
                if (!report) return;

                editReportIdInput.value = report.id;
                editModalTitle.textContent = `Edit Laporan Tim ${report.team} (${report.date})`;
                
                editPicaMasuk.value = report.pica.masuk;
                editPicaClose.value = report.pica.close;
                editPicaPending.value = report.pica.pending;

                if (report.team === 'Plumber' && report.details) {
                    editPlumberFields.style.display = 'block';
                    document.getElementById('edit-plumber-ph').value = report.details.ph;
                    document.getElementById('edit-plumber-tds').value = report.details.tds;
                    document.getElementById('edit-plumber-embung').value = report.details.embung;
                    document.getElementById('edit-plumber-frp01').value = report.details.frp01;
                    document.getElementById('edit-plumber-frp02').value = report.details.frp02;
                } else {
                    editPlumberFields.style.display = 'none';
                }

                editDailyWorkContainer.innerHTML = '';
                report.dailyWork.forEach((work, index) => {
                    if (report.team === 'Plumber' && (work.description.includes('pompa area seam F') || work.description.includes('pompa area setpond 5'))) {
                        return;
                    }
                    const workItemDiv = document.createElement('div');
                    workItemDiv.className = 'modal-work-item';
                    workItemDiv.innerHTML = `
                        <input type="text" class="edit-work-description" value="${work.description}" data-index="${index}">
                        <select class="edit-work-status" data-index="${index}">
                            <option value="PROGRESS" ${work.status === 'PROGRESS' ? 'selected' : ''}>PROGRESS</option>
                            <option value="CLOSE" ${work.status === 'CLOSE' ? 'selected' : ''}>CLOSE</option>
                            <option value="CONTINUE" ${work.status === 'CONTINUE' ? 'selected' : ''}>CONTINUE</option>
                        </select>
                    `;
                    editDailyWorkContainer.appendChild(workItemDiv);
                });

                editModal.classList.add('active');
            };

            const closeEditModal = () => {
                editModal.classList.remove('active');
            };

            [closeEditModalBtn, cancelEditBtn].forEach(btn => btn.addEventListener('click', closeEditModal));

            editReportForm.addEventListener('submit', (e) => {
                e.preventDefault();
                const reportId = parseInt(editReportIdInput.value);
                const reportIndex = reports.findIndex(r => r.id === reportId);
                if (reportIndex === -1) return;

                reports[reportIndex].pica.masuk = parseInt(editPicaMasuk.value);
                reports[reportIndex].pica.close = parseInt(editPicaClose.value);
                reports[reportIndex].pica.pending = parseInt(editPicaPending.value);

                if (reports[reportIndex].team === 'Plumber') {
                    reports[reportIndex].details.ph = document.getElementById('edit-plumber-ph').value;
                    reports[reportIndex].details.tds = document.getElementById('edit-plumber-tds').value;
                    reports[reportIndex].details.embung = document.getElementById('edit-plumber-embung').value;
                    reports[reportIndex].details.frp01 = document.getElementById('edit-plumber-frp01').value;
                    reports[reportIndex].details.frp02 = document.getElementById('edit-plumber-frp02').value;
                }

                const editableWorkItems = [];
                document.querySelectorAll('.edit-work-description').forEach(input => {
                    const index = parseInt(input.dataset.index);
                    const statusSelect = document.querySelector(`.edit-work-status[data-index='${index}']`);
                    editableWorkItems.push({
                        description: input.value.trim(),
                        status: statusSelect.value
                    });
                });
                
                const autoJobs = reports[reportIndex].dailyWork.filter(w => w.status === 'CONTINUE');
                reports[reportIndex].dailyWork = [...editableWorkItems, ...autoJobs];

                saveReports();
                renderHistory();
                closeEditModal();
                alert('Laporan berhasil diperbarui!');
            });

            // === HALAMAN DASHBOARD ===
            const updateDashboardChart = () => {
                const groupedByDate = reports.reduce((acc, report) => {
                    const date = report.date;
                    if (!acc[date]) {
                        acc[date] = { picaMasuk: 0, picaClose: 0, picaPending: 0 };
                    }
                    acc[date].picaMasuk += report.pica.masuk;
                    acc[date].picaClose += report.pica.close;
                    acc[date].picaPending += report.pica.pending;
                    return acc;
                }, {});

                const sortedDates = Object.keys(groupedByDate).sort((a, b) => new Date(a) - new Date(b)).slice(-7);
                
                const labels = sortedDates;
                const dataMasuk = sortedDates.map(date => groupedByDate[date].picaMasuk);
                const dataClose = sortedDates.map(date => groupedByDate[date].picaClose);
                const dataPending = sortedDates.map(date => groupedByDate[date].picaPending);

                if (picaChart) picaChart.destroy();

                picaChart = new Chart(picaChartCanvas, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [
                            {
                                label: 'PICA Masuk',
                                data: dataMasuk,
                                backgroundColor: 'rgba(52, 152, 219, 0.7)',
                                borderColor: 'rgba(52, 152, 219, 1)',
                                borderWidth: 1
                            },
                            {
                                label: 'PICA Close',
                                data: dataClose,
                                backgroundColor: 'rgba(46, 204, 113, 0.7)',
                                borderColor: 'rgba(46, 204, 113, 1)',
                                borderWidth: 1
                            },
                            {
                                label: 'PICA Pending',
                                data: dataPending,
                                backgroundColor: 'rgba(241, 196, 15, 0.7)',
                                borderColor: 'rgba(241, 196, 15, 1)',
                                borderWidth: 1
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: { y: { beginAtZero: true, ticks: { stepSize: 1 } } },
                        plugins: { tooltip: { mode: 'index', intersect: false } },
                    }
                });
            };

            const updateDashboardLeadTimeChart = () => {
                const thirtyDaysAgo = new Date();
                thirtyDaysAgo.setDate(thirtyDaysAgo.getDate() - 30);

                const recentReports = reports.filter(r => new Date(r.date) >= thirtyDaysAgo);
                
                let combinedLeadTime = 0;

                if (recentReports.length > 0) {
                    const totalPending = recentReports.reduce((sum, report) => sum + report.pica.pending, 0);
                    const averageWIP = totalPending / recentReports.length;

                    const totalClose = recentReports.reduce((sum, report) => sum + report.pica.close, 0);
                    const throughput = totalClose / 30;

                    if (throughput > 0) {
                        const leadTime = averageWIP / throughput;
                        combinedLeadTime = leadTime.toFixed(2);
                    }
                }

                if (leadTimeChart) leadTimeChart.destroy();

                leadTimeChart = new Chart(leadTimeChartCanvas, {
                    type: 'bar',
                    data: {
                        labels: ['Semua Tim Gabungan'],
                        datasets: [{
                            label: 'Rata-rata Lead Time (Hari)',
                            data: [combinedLeadTime],
                            backgroundColor: [
                                'rgba(142, 68, 173, 0.7)', 
                            ],
                            borderColor: [
                                'rgba(142, 68, 173, 1)',
                            ],
                            borderWidth: 1,
                            maxBarThickness: 150
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                title: {
                                    display: true,
                                    text: 'Rata-rata Hari'
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            }
                        }
                    }
                });
            };

            const updateDashboardSummaries = () => {
                dashboardTeamGrid.innerHTML = '';
                const teams = ['Carpenter', 'Plumber', 'Taman'];
                const today = new Date();
                const todayString = today.toISOString().split('T')[0];

                teams.forEach(team => {
                    const teamReportsToday = reports.filter(r => r.team === team && r.date === todayString);
                    
                    let totalPicaCloseToday = 0;
                    let totalPicaPendingToday = 0;
                    let workToday = [];

                    teamReportsToday.forEach(report => {
                        totalPicaCloseToday += report.pica.close;
                        totalPicaPendingToday += report.pica.pending;
                        workToday.push(...report.dailyWork);
                    });

                    let workLogHtml = workToday.length > 0 ? workToday.map(work => `
                        <div class="log-item">
                            <span>${work.description}</span>
                            <span class="status-${work.status.toLowerCase()}">${work.status}</span>
                        </div>
                    `).join('') : '<p class="no-work">Tidak ada pekerjaan dilaporkan hari ini.</p>';

                    let specialDetailsHtml = '';
                    if (team === 'Plumber') {
                        const latestPlumberReportToday = teamReportsToday.sort((a, b) => b.id - a.id)[0];
                        if (latestPlumberReportToday && latestPlumberReportToday.details) {
                            const details = latestPlumberReportToday.details;
                             specialDetailsHtml = `
                                <div class="team-details-summary">
                                    <div class="detail-item"><span>PH</span> <strong>${details.ph || '-'}</strong></div>
                                    <div class="detail-item"><span>TDS</span> <strong>${details.tds || '-'}</strong></div>
                                    <div class="detail-item"><span>Embung</span> <strong>${details.embung ? details.embung + ' %' : '-'}</strong></div>
                                    <div class="detail-item"><span>FRP01</span> <strong>${details.frp01 ? details.frp01 + ' %' : '-'}</strong></div>
                                    <div class="detail-item"><span>FRP02</span> <strong>${details.frp02 ? details.frp02 + ' %' : '-'}</strong></div>
                                </div>
                            `;
                        }
                    }

                    const teamCard = document.createElement('div');
                    teamCard.className = 'team-dashboard-card';
                    teamCard.innerHTML = `
                        <h3 class="${team.toLowerCase()}-border">TIM ${team.toUpperCase()}</h3>
                        ${specialDetailsHtml}
                        <div class="team-work-log">
                            ${workLogHtml}
                        </div>
                        <div class="team-pica-summary">
                            <div class="pica-stat">
                                <div class="pica-stat-number close">${totalPicaCloseToday}</div>
                                <div class="pica-stat-label">Selesai</div>
                            </div>
                            <div class="pica-stat">
                                <div class="pica-stat-number pending">${totalPicaPendingToday}</div>
                                <div class="pica-stat-label">Tertunda</div>
                            </div>
                        </div>
                    `;
                    dashboardTeamGrid.appendChild(teamCard);
                });
            };

            const updateDashboard = () => {
                const today = new Date();
                const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
                dashboardDateDisplay.textContent = `REKAPAN TIM - ${today.toLocaleDateString('id-ID', options)}`;
                
                updateDashboardChart();
                updateDashboardLeadTimeChart();
                updateDashboardSummaries();
            }

            // === FUNGSI BANTUAN ===
            const saveReports = () => {
                localStorage.setItem('dailyReports', JSON.stringify(reports));
                updateDashboard();
            };

            // Jalankan aplikasi
            initializeApp();
        });
    </script>
</body>
</html>

